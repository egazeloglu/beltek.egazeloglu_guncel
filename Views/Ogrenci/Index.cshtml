@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Ogrenci İşlemleri";
}

<h1>Öğrenci Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
            <th>Sınıf Adı</th>
            <th align="center" colspan="3">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OgrenciId</td>
                <td>@item.OgrenciAd</td>
                <td>@item.OgrenciSoyad</td>
                <td>@item.OgrenciNumara</td>
                <td>@item.Sinif.SinifAd</td>
                <td width="100px" class="btn btn-light"><a href="@Url.Action("OgrenciEkle", "Ogrenci")">Yeni</a></td>
                <td width="100px" class="btn btn-warning"><a href="@Url.Action("OgrenciDuzenle", "Ogrenci", new { id = item.OgrenciId })">Düzenle</a></td>
                <td width="100px" class="btn btn-danger"><a href="@Url.Action("OgrenciSil", "Ogrenci", new { id = item.OgrenciId })">Sil</a></td>
            </tr>
        }
        @if(Model.Count() == 0){
            <tr>
                <td width="100px" class="btn btn-light"><a href="@Url.Action("OgrenciEkle", "Ogrenci")">Yeni</a></td>
            </tr>
        }

    </tbody>
</table>

