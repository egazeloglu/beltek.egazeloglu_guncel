<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beltek.HelloMvc Erdal GAZELOGLU</title>
    <meta name="description" content="@ViewData["Description"]" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Beltek.HelloMvc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-oKslcX1rZbOpwXhoVdP9/8dq4Smp2dsR5nGg6V7hONldeeTZ7oB4I0iM6trCDnb9" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav id="menu1" class="navbar bg-body-tertiary">
            <form class="container-fluid justify-content-start">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Erdal GAZELOGLU</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ogrenci" asp-action="Index">Öğrenci İşlemleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sinif" asp-action="Index">Sınıf İşlemleri</a>
                        </li>
                    </ul>
                </div>
            </form>
        </nav>

        <nav id="menu2" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex justify-content-start">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Erdal GAZELOGLU</a>
            <div class="container-fluid">
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ogrenci" asp-action="Index">Öğrenci İşlemleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sinif" asp-action="Index">Sınıf İşlemleri</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <script>
        // Ekran genişliğine göre menüleri kontrol et
        $(document).ready(function () {
            // İlk başta ekran genişliğine göre menüleri kontrol et
            toggleMenus();

            // Ekran boyutu değiştiğinde tekrar kontrol et
            $(window).resize(function () {
                toggleMenus();
            });

            function toggleMenus() {
                if ($(window).width() <= 768) { // Örnek olarak 768 pikselde (Bootstrap için sm boyutu) kontrol ediyoruz
                    $("#menu2").addClass("d-none"); // menu1'i gizle
                    $("#menu1").removeClass("d-none"); // menu2'yi göster
                } else {
                    $("#menu2").removeClass("d-none"); // menu1'i göster
                    $("#menu1").addClass("d-none"); // menu2'yi gizle
                }
            }
        });
    </script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Beltek 72 Dönem - <a asp-area="" asp-controller="Home" asp-action="">erdal gazeloglu kurs bitirme ödevi</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-qFyn6Qp3hf9erfYYuL1Dlo3jc9nwpzXt6l3uBLueBOwpSIKzj6tZTJdP1L2BMmW" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-oKslcX1rZbOpwXhoVdP9/8dq4Smp2dsR5nGg6V7hONldeeTZ7oB4I0iM6trCDnb9" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
